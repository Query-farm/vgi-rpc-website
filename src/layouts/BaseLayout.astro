---
import '../styles/global.css';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  currentPage?: string;
}

const {
  title,
  description = 'Transport-agnostic RPC built on Apache Arrow IPC serialization. Multi-language: Python, TypeScript, Go, C++.',
  currentPage = '/',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://vgi-rpc.query.farm" />
    <meta property="og:image" content="https://vgi-rpc.query.farm/logo-hero.png" />

    <link rel="icon" type="image/png" href="/logo-hero.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />

    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <Nav currentPage={currentPage} />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
